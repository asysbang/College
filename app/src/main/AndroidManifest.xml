<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asysbang.college">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CollegeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".ExamActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".MarketActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".FoodActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ChatActivity" android:theme="@style/AppTheme"/>
        <service android:name=".CollegeService"/>
    </application>

</manifest>
